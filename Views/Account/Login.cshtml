
@model HandyApp.Models.ViewModels.LoginVIewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HandyApp</title>
    <link rel="stylesheet" href="~/css/StyleSheet.css"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.6.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
   

</head>

<body>


    <div class="container-fluid">
        <div class="row mh-100vh">
            <div class="col-10 col-sm-8 col-md-6 col-lg-6 offset-1 offset-sm-2 offset-md-3 offset-lg-0 align-self-center d-lg-flex align-items-lg-center align-self-lg-stretch bg-white p-5 rounded rounded-lg-0 my-5 my-lg-0" id="login-block">
                <div class="m-auto w-lg-75 w-xl-50">
                    <h2 class="text-info font-weight-light mb-5"><i class="fa fa-connectdevelop"></i>&nbsp;Handy App</h2>
                    <form method="post" asp-action="Login" asp-controller="Account">
                        <div asp-validation-summary="All"></div>
                        <div class="form-group"><label class="text-secondary">Username</label><input asp-for="Email" class="form-control" type="text"></div>
                        <div class="form-group"><label class="text-secondary">Password</label><input asp-for="Password" class="form-control" type="password"></div>
                        <div class="form-group"><label class="text-secondary">Remeber Me</label><input style="margin-left: 10px" asp-for="RememberMe" /></div>
                        <div class="container-fluid"><input class="btn btn-primary" type="submit" style="margin-left: 118px;" value="Login"/>
                            <a class="btn btn-primary" type="button" style="margin-left: 118px; margin-top:10px" value="Register" asp-action="Register">Register</a>
                            <a class="btn btn-primary" type="button" style="margin-left: 83px; margin-top: 26px;" asp-controller="Customer" asp-action="Create">Customer Form&nbsp;</a></div>
                    </form>
                    <p class="mt-3 mb-0"></p>
                </div>
            </div>
            <div class="col-lg-6 d-flex align-items-end" id="bg-block" style="background: url(https://769305.smushcdn.com/1432177/wp-content/uploads/blurry-image-1024x1024.jpg?lossy=1&strip=1&webp=1) center center/cover;">

            </div>
            
        </div>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - HandyApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

</body>
</html>
