@model HandyApp.Models.Customer



<br/>

<section class="contact-clean" style="background: rgba(241,247,252,0);">
    <form method="post" asp-action="Create" style="background: rgb(0,51,102);">
        <h2 class="text-center" style="color: rgb(216,216,216);">Submit job</h2>
        <div class="form-group">
            <input asp-for="Name" class="form-control" type="text" name="name" placeholder="Name" style="background: rgba(255, 255, 255, 0.85);">
        </div>
        <div class="form-group">
            <input asp-for="Telephone" class="form-control" type="text" name="Telephone" placeholder="Telephone number" style="margin-top: 10px;">
            <input asp-for="Address" class="form-control" type="text" name="address" placeholder="address" style="margin-top: 20px;" >
        </div>
        <div class="form-group"><input asp-for="Tasks" class="form-control" name="tasks" placeholder="enter jobs" style="margin-top: 14px;"></div>

        <div class="form-group"><button class="btn btn-primary" type="submit" style="margin-left: 155px;">Sumbit</button></div>
    </form>
</section>