@using System.Collections.Specialized
@model HandyApp.Models.Employee

<form method="post" asp-action="Create">

    <div class="container">
        <div class="form-row">
            <h1 style="margin-top: 21px;"> New Employee </h1>

            <div class="col-md-12" style="margin-bottom: 15px;">
                <label>
                    <strong>Name :</strong>
                </label><input asp-for="Name" type="text" class="form-control" style="width: 265px;"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

        </div>
        <div class="form-row">
            <div class="col-md-12">
                <label>
                    <strong>speciality :</strong>
                </label><input asp-for="Speciality" type="text" class="form-control" style="width: 268px;"/>
                <span asp-validation-for="Speciality" class="text-danger"></span>
               
            </div>
            <button class="btn btn-primary" type="submit" style="margin-top: 42px;">Add</button>
        </div>
    </div>

</form>


@section Scripts
{
    @{<partial name="_ValidationScriptsPartial"/>}
    
    
}
