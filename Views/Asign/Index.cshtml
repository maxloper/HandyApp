
@using System.Collections
@using Microsoft.EntityFrameworkCore.Metadata.Internal
@using Microsoft.EntityFrameworkCore.Storage
@model IEnumerable<HandyApp.Models.Asign>


<h1 style="margin-left: 52px;margin-top: 21px;">Customer Jobs</h1>
<div class="table-responsive" style="margin-top: 12px;" >
    <table class="table" style="width: 50%">
       
        <thead>

            <tr>
                <th style="margin-top: 0px;">Customer name</th>
                <th style="margin-top: 0px;">Task</th>
                <th style="margin-top: 0px;">Job ID</th>
            </tr>


        </thead>
        <tbody>
           


                @if (ViewBag.Customer != null)
                {
                    foreach (var item in (IEnumerable<Customer>)ViewBag.Customer)
                    {
                    <tr>
                        <td>@Html.DisplayFor(modelItem=>item.Name)</td>
                        <td>@Html.DisplayFor(modelItem=>item.Tasks)</td>
                        <td>@Html.DisplayFor(modelItem=>item.Id)</td>
                    </tr>

                }
            }




            </tbody>
    </table>
</div>
<h1 style="margin-left: 52px;margin-top: 21px;">Assigned jobs <a class="btn btn-primary" type="button" style="margin-left: 70px; margin-top: 3px; margin-bottom: 4px;" asp-controller="Asign" asp-action="Create">assign</a></h1>
<table class="table">
        <thead>
            <tr>
                <th style="margin-top: 0px;width: 143px;">Customer name</th>
                <th style="margin-top: 0px;">Tasks</th>
                <th style="margin-top: 0px;">Status</th>
                <th style="margin-top: 0px;">Assigned to</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>@item.Name</td>
                <td>@item.Tasks</td>
                <td>@item.Status</td>
                <td>@item.Employee.Name</td>
                <td><a class="btn btn-danger" type="button" style="margin-left: 7px; margin-top: 3px; margin-bottom: 4px;" asp-controller="Asign" asp-action="Delete" asp-route-Id="@item.Id">Delete</a>
                    <a class="btn btn-success" type="button" style="margin-left: 7px; margin-top: 3px; margin-bottom: 4px;" asp-controller="Asign" asp-action="Update" asp-route-Id="@item.Id">Update</a>
                
                
                    </td>
            </tr>
            }

        </tbody>
    </table>
