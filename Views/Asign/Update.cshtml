@model HandyApp.Models.ViewModels.AsignVM



<form method="post" asp-action="UpdatePost">

    <input asp-for="Asign.Id" hidden />
    
    
    
    <div class="form-row">
    <div class="col-md-3">

    <div class="container">
        <div class="form-row">
            <h1 style="margin-top: 21px;"> Update task </h1>
            <div class="col-md-12" style="margin-bottom: 15px;">
                <label><strong>Name :</strong></label><input input readonly="readonly" asp-for="Asign.Name"  type="text" class="form-control" style="width: 265px;" />
                <label><strong>Task :</strong></label><input input readonly="readonly" asp-for="Asign.Tasks" type="text" class="form-control" style="width: 265px;" />
                <label><strong>Telephone :</strong></label><input readonly="readonly" asp-for="Asign.Telephone"  class="form-control" type="text">
                <label><strong>Addres :</strong></label><input readonly="readonly" asp-for="Asign.Address" class="form-control"  type="text">
                <label><strong>Status :</strong></label><select asp-for="Asign.Status" class="form-control">
                                                    <option value="in progress" selected="">in progress</option>
                                                    <option value="completed">completed</option>
                                                </select>

                <label><strong>Asign to :</strong></label><select asp-for="Asign.EmployeeNameId" asp-items="@Model.TypeDropDown" class="form-control">
                    <option selected>-- Select option</option>
                </select>

                <div class="col-md-12"><input class="btn btn-danger" type="submit" style="margin-top: 42px;" value="Update"></div>
            </div>
            </div>
        </div>
        </div>
    </div>
</form>